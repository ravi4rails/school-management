<div class="login-form">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="col-md-12 col-xs-12">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
    </div>
    <div class="col-md-12 col-xs-12">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
    </div>
    <div class="col-md-12 col-xs-12">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
    </div>
    &nbsp
    <div class="col-md-12 col-xs-12">
      <%= f.submit "Sign up", class: "btn btn-primary btn-block btn-lg" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

<style type="text/css">
  .login-form{
    max-width: 40%;
    border:1px solid #ddd;
    margin-left: 20px;
    position:center;
    background-color: #ddd;
  }
  .login-form h2 {
    padding-left: 16px;
  }
  @media screen and (max-width:767px) {
    .login-form{
      max-width: 100%;
      margin-right: 20px;
    }
  }
</style>