<div class="login-form">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-md-12 col-xs-12">
      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", :placeholder => "Enter Your Email" %>
    </div>
    &nbsp
    <div class="col-md-12 col-xs-12">
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", :placeholder => "Enter Your Password" %>
    </div>
    <div class="col-md-12 col-xs-12">
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
    </div>
    <div class="col-md-12 col-xs-12">
      <%= f.submit "Log in", class: "btn btn-primary btn-block btn-lg"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

<style type="text/css">
  .login-form{
    max-width: 40%;
    border:1px solid #ddd;
    margin-left: 20px;
    position:center;
    background-color: #ddd;
  }
  .login-form h2 {
    padding-left: 16px;
  }
  @media screen and (max-width:767px) {
    .login-form{
      max-width: 100%;
      margin-right: 20px;
    }
  }
</style>