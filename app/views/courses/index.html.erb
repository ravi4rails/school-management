<div class="container content-wrapper">
  <p id="notice"><%= notice %></p>
  <div class="jumbotron">
    <h3>Listing Courses</h3>
  </div>
  <div class="search_form">
    <%= search_form_for @search do |f| %>
      <div class="input-group">
        <%= f.text_field :name_or_department_name_cont, :placeholder => "Search Subject", class: "form-control" %>
        <span class="input-group-btn">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>Department</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody id="course-index">
      <% @courses.each do |course| %>
        <tr id="course_<%= course.id%>">
          <td><%= course.name %></td>
          <td><%= course.duration %></td>
          <td><%= course.department.try(:name) %></td>
          <td><%= link_to 'Show', course, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_course_path(course), :remote => true, class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <br>

  <%= link_to 'New Course', new_course_path, class: "btn btn-primary", :remote => true %>
</div>
<div class="modal fade" id="course-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="edit-course-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>