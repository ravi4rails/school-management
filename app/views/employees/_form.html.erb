<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div class="jumbotron">
      <div id="error_explanation">
        <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
        <ul>
        <% @employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control input-lg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :middle_name %>
      <%= f.text_field :middle_name, class: "form-control input-lg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "form-control input-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control input-lg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :contact %>
      <%= f.text_field :contact, class: "form-control input-lg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :age %>
      <%= f.text_field :age, class: "form-control input-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control input-lg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control input-lg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :country %>
      <%= f.text_field :country, class: "form-control input-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :date_of_birth %>
      <%= f.text_field :date_of_birth, class: "form-control input-lg datepicker" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :date_of_joining %>
      <%= f.text_field :date_of_joining, class: "form-control input-lg datepicker" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :qualification %>
      <%= f.text_field :qualification, class: "form-control input-lg" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control input-lg" %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :department_id %>
      <%= f.select :department_id, options_for_select(Department.all.collect {|p| [ p.name, p.id ] },(f.object.try(:department_id))),{include_blank: 'None'}, { :class => 'form-control input-lg'} %>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= f.label :Photo %>
      <%= f.file_field :profile_picture %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary " %>
  </div>
<% end %>

<script type="text/javascript">
  $(".datepicker").datepicker({
    format: "yyyy-mm-dd"
  });
</script>