<tr id="task_<%= task.id %>">
  <td><%= task.title %></td>
  <td><%= task.description %></td>
  <td><%= task.due_date %></td>
  <td><%= link_to 'Show', task, class: "btn btn-info" %></td>
  <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning", :remote => true %></td>
  <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", :remote => true %></td>
</tr>