<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="jumbotron">
    <h1>Listing Employee Subjects</h1>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Employee</th>
          <th>Subject</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody id="employee-subject-index">
        <% @employee_subjects.each do |employee_subject| %>
          <tr id="employee_subject_<%= employee_subject.id %>">
            <td><%= employee_subject.employee.try(:name) %></td>
            <td><%= employee_subject.subject.try(:name) %></td>
            <td><%= link_to 'Show', employee_subject, class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_employee_subject_path(employee_subject), class: "btn btn-warning", :remote => true %></td>
            <td><%= link_to 'Destroy', employee_subject, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", :remote => true %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<br>

<%= link_to 'New Employee subject', new_employee_subject_path, class: "btn btn-primary", :remote => true %>

</div>
<div class="modal fade" id="newEmployeeSubject" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="editEmployeeSubject" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>