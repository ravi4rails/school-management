<div class="container">
  <div class="jumbotron">
    <h3><%= @section.name %> Students</h3>
  </div>
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @students.each do |student| %>
      <div class="panel panel-default student-panel">
        <div class="panel-heading" role="tab" id="heading_<%= student.id%>">
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse_<%= student.id%>" aria-expanded="true" aria-controls="collapse_<%= student.id%>">
              <%= student.full_name %>
              <i class="glyphicon glyphicon-plus pull-right"></i>
            </a>
          </h4>
        </div>
