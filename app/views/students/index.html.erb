<div class="container">
  <div class="jumbotron">
    <h3>Student Admission</h3>
    <%= link_to "Create An Admission Here", new_student_path, class: "btn btn-primary"%>
  </div>
  <div class="search_form">
    <%= search_form_for @search do |f| %>
      <div class="input-group">
        <%= f.text_field :first_name_or_last_name_or_enrollment_number_or_admission_number_or_email_cont, :placeholder => "Search Subject", class: "form-control" %>
        <span class="input-group-btn">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Enrollment Number</th>
          <th>Admission Number</th>
          <th>Batch</th>
          <th>DOB</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.full_name %></td>
            <td><%= student.enrollment_number %></td>
            <td><%= student.admission_number %></td>
            <td><%= student.try(:batch).try(:name) %></td>
            <td><%= student.date_of_birth %></td>
            <td><%= link_to "Show", student, class: "btn btn-info btn-sm" %></td>
            <td><%= link_to "Edit", edit_student_path(student), class: "btn btn-warning btn-sm" %></td>
            <td><%= link_to "Delete", student,method: :delete, data: {confirm: "Are You Sure?"}, class: "btn btn-danger btn-sm" %></td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>