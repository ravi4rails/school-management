<div class="container">
  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th data-breakpoints="xs">Admission Number</th>
      <th data-breakpoints="xs sm">Enrollment Number</th>
      <th data-breakpoints="xs">DOB</th>
      <th data-breakpoints="xs">Admission Date</th>
      <th data-breakpoints="xs">Category</th>
      <th data-breakpoints="xs">Relegion</th>
      <th data-breakpoints="xs">City</th>
      <th data-breakpoints="xs">State</th>
      <th data-breakpoints="xs">Country</th>
    </tr>
  </thead>
  <tbody>
    <% @active_batches.each do |active_batch| %>
      <% active_batch.students.each do |active_student| %>
        <tr>
          <td><%= active_student.full_name %></td>
          <td><%= active_student.batch.try(:course).try(:name) %></td>
          <td><%= active_student.admission_number %></td>
          <td><%= active_student.enrollment_number %></td>
          <td><%= active_student.date_of_birth %></td>
          <td><%= active_student.admission_date %></td>
          <td><%= active_student.category %></td>
          <td><%= active_student.relegion %></td>
          <td><%= active_student.city %></td>
          <td><%= active_student.state %></td>
          <td><%= active_student.country %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<script>
  jQuery(function($){
    $('.table').footable({
      "paging": {
        "enabled": true
      },
      "filtering": {
        "enabled": true
      },
      "sorting": {
        "enabled": true
      }
    });
  });
</script>