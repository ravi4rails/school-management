<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="jumbotron">
    <h3>Listing Subjects</h3  >
  </div>
  <div class="search_form">
    <%= search_form_for @search do |f| %>
      <div class="input-group">
        <%= f.text_field :name_cont, :placeholder => "Search Subject", class: "form-control" %>
        <span class="input-group-btn">
          <%= f.submit "Search", class: "btn btn-primary" %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody id="subject-index">
        <% @subjects.each do |subject| %>
          <tr id="subject_<%= subject.id %>">
            <td><%= subject.name %></td>
            <td><%= link_to 'Show', subject, class: "btn btn-info" %></td>
            <td><%= link_to 'Edit', edit_subject_path(subject), :remote => true, class: "btn btn-warning" %></td>
            <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New Subject', new_subject_path, class: "btn btn-primary", :remote => true %>
</div>
<br>

<div class="modal fade" id="subject-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="edit-subject-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>