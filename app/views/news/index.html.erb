<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="jumbotron">
    <h1>Listing News</h1>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @news.each do |news| %>
          <tr>
            <td><%= news.title %></td>
            <td><%= news.content.html_safe %></td>
            <td><%= link_to 'Show', news %></td>
            <td><%= link_to 'Edit', edit_news_path(news) %></td>
            <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New News', new_news_path %>
</div>